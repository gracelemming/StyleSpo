<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/homepage_background"
tools:context=".view.UserProfileFragment">



<ImageButton
    android:id="@+id/back_button"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp"
    android:background="#00000000"
    android:src="@drawable/baseline_keyboard_backspace_24" />

<androidx.cardview.widget.CardView
    android:layout_width="80dp"
    android:layout_height="80dp"

    android:elevation="12dp"
    android:id="@+id/profile_image_view"
    app:cardCornerRadius="40dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="35dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"

        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_2_24" />/>
</androidx.cardview.widget.CardView>


<TextView
    android:id="@+id/username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="150dp"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="30dp"
    android:text="Username" />

<ImageView
    android:id="@+id/today_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/friend_request_button_send"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="100dp"
    android:src="@drawable/baseline_person_2_24" />

<Button
    android:id="@+id/friend_request_button_send"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/username"
    android:layout_centerHorizontal="true"
    android:text="Add Friend" />

<Button
    android:id="@+id/friend_request_button_decline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/username"
    android:layout_toEndOf="@id/friend_request_button_send"
    android:text="decline"/>

<TextView
    android:id="@+id/friend_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="75dp"
    android:layout_toRightOf="@+id/username"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="10dp"
    android:text="#" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/friend_count"
    android:layout_toRightOf="@id/username"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="30dp"
    android:text="Friends" />





</RelativeLayout>